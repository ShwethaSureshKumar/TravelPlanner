<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.travelplanner.LoginController">

    <VBox id="dashboard" alignment="CENTER" layoutX="-11.0" prefHeight="1080.0" prefWidth="1920.0" spacing="20" style="-fx-background-color: #176B87; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
        <Label id="label_login" fx:id="label_login" text="Logged in successfully">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Button maxHeight="50.0" maxWidth="200.0" minHeight="50.0" minWidth="200.0" onAction="#openTripPlanningPage" style="-fx-background-color: #64CCC5; -fx-border-radius: 5px;" text="Plan a trip">
            <font>
                <Font name="Times New Roman" size="18.0" />
            </font></Button>
        <Button maxHeight="50.0" maxWidth="200.0" minHeight="50.0" minWidth="200.0" style="-fx-background-color: #64CCC5; -fx-border-radius: 5px;" text="View Destinations">
            <font>
                <Font name="Times New Roman" size="18.0" />
            </font></Button>
        <Button maxHeight="50.0" maxWidth="200.0" minHeight="50.0" minWidth="200.0" onAction="#openTripPackagePage" style="-fx-background-color: #64CCC5; -fx-border-radius: 5px;" text="View Itinerary">
            <font>
                <Font name="Times New Roman" size="18.0" />
            </font></Button>
        <Button maxHeight="50.0" maxWidth="200.0" minHeight="50.0" minWidth="200.0" style="-fx-background-color: #64CCC5; -fx-border-radius: 5px;" text="Budget Management">
            <font>
                <Font name="Times New Roman" size="18.0" />
            </font></Button>
        <Button maxHeight="50.0" maxWidth="200.0" minHeight="50.0" minWidth="200.0" style="-fx-background-color: #64CCC5; -fx-border-radius: 5px;" text="Logout">
            <font>
                <Font name="Times New Roman" size="18.0" />
            </font></Button>
    </VBox>
</StackPane>
